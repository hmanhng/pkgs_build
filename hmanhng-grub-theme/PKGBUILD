pkgname=hmanhng-grub-theme
pkgver=1.0
pkgrel=0
pkgdesc="Default grub2 bootloader theme with depends"
url="https://github.com/hmanhng/extra-packages"
arch=('any')
license=('GPL3')
makedepends=()
depends=('grub' 'os-prober' 'lsb-release' 'efibootmgr')
conflicts=()
groups=(archcraft-grub-themes)
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	(find archcraft -type f -exec install -Dm 644 "{}" "$pkgdir/boot/grub/themes/{}" \;)
}
