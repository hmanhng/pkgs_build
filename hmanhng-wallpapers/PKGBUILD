pkgname=hmanhng-wallpapers
pkgver=1.0
pkgrel=2
pkgdesc="Hmanhng wallpapers for Archcraft"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _bgdir=${pkgdir}/usr/share/backgrounds/hmanhng-wallpapers
	mkdir -p "$_bgdir"
	cp -r ${srcdir}/* "$_bgdir"
}
