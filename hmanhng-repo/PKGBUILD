pkgname=hmanhng-repo
pkgver=1.0
pkgrel=2
pkgdesc="Repo hmanhng"
url="https://github.com/hmanhng/pkgs"
arch=('any')
license=('GPL3')

prepare() {
  cp -af ../files/. $srcdir
}

package() {
  install -Dm 644 hmanhng-mirrorlist      $pkgdir/etc/pacman.d/hmanhng-mirrorlist
  install -Dm 644 archcraft-mirrorlist    $pkgdir/etc/pacman.d/archcraft-mirrorlist
  install -Dm 644 pacman.conf             $pkgdir/etc/pacman.conf
}
